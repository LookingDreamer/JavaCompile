<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zzb.cm.entity">
	<!-- INSBRelationperson -->
	<select id="INSBRelationperson_insert" parameterType="com.zzb.cm.entity.INSBRelationperson" resultType="int">
		insert into INSBRelationperson
		(id,operator,createtime,modifytime,noti,taskid,personid) 
		values
		(#{id},#{operator},#{createtime},#{modifytime},#{noti},#{taskid},#{personid})
	</select>
	<select id="INSBRelationperson_select" parameterType="Map" resultType="com.zzb.cm.entity.INSBRelationperson">
		select * from INSBRelationperson
		<where>
			<if test="taskid != null">
				and taskid = #{taskid}
			</if>
			<if test="personid != null">
				and personid = #{personid}
			</if>
		</where>
	</select>
	<select id="INSBRelationperson_selectOne" parameterType="Map" resultType="com.zzb.cm.entity.INSBRelationperson">
		select * from INSBRelationperson
		<where>
			<if test="taskid != null">
				and taskid = #{taskid}
			</if>
			<if test="personid != null">
				and personid = #{personid}
			</if>
		</where>
		 ORDER BY createtime DESC LIMIT 1  
	</select>
	
	<select id="INSBRelationperson_selectById" parameterType="String" resultType="com.zzb.cm.entity.INSBRelationperson">
		select * from INSBRelationperson where id = #{id}
	</select>
	<select id="INSBRelationperson_deleteById" parameterType="String">
		delete from INSBRelationperson where id = #{id}
	</select>
	<select id="INSBRelationperson_updateById" parameterType="com.zzb.cm.entity.INSBRelationperson">
		update INSBRelationperson  set operator = #{operator},modifytime = NOW(),noti = #{noti},taskid = #{taskid},personid = #{personid} where id = #{id}
	</select>
	
	<!--依据taskID来修改personID -->
	<select id="INSBRelationperson_updateByTaskId" parameterType="com.zzb.cm.entity.INSBRelationperson">
		update INSBRelationperson  set personid = #{personid},modifytime = NOW() where taskid = #{taskid}
	</select>
	<select id="INSBRelationperson_selectCount" parameterType="Map" resultType="Long">
		select count(1) from INSBRelationperson
		<where>
			<if test="taskid != null">
				and taskid = #{taskid}
			</if>
			<if test="personid != null">
				and personid = #{personid}
			</if>
		</where>
	</select>
	
	<select id="INSBRelationperson_selectByTaskID" parameterType="String" resultType="com.zzb.cm.entity.INSBRelationperson">
		select * from INSBRelationperson where taskid = #{taskid} limit 1
	</select>
</mapper>